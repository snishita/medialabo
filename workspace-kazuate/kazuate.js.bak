// ボタンを押した後の処理をする関数 hantei() の定義
function hantei() {
	let p = document.querySelector('#result');
    let yoso = 4;       // 将来: テキストボックスの数値をここに代入
    // 課題3-1：ここの判定処理を作成する．
	console.log('予想: ' + yoso);

	if (kaisu >= 3) {
		p.textContent = '答えは ' + kotae + ' でした．すでにゲームは終わっています';
	}
	else if (kotae === yoso) {
		p.textContent = '正解です．おめでとう!';
		kaisu = 4;
	}
	else {
		kaisu += 1;
		p.textContent = 'まちがい．';
		if (kaisu >= 3) {
			p.textContent += '残念でした答えは ' + kotae + ' です．';
		}
		else if (kotae > yoso) {
			p.textContent += '答えはもっと大きいですよ';
		}
		else {
			p.textContent += '答えはもっと小さいですよ';
		}
	}
}

